@import "../../../style/skin.wxss";

page {
	background-color: #fff !important;
}

.main {
	padding: 10rpx !important;
}

.list {
	width: 100%;
	padding: 20rpx 25rpx;
	display: flex;
	flex-direction: column;
}

.list .item {
	width: 100%;
	display: flex;
	background-color: #fff;
	padding: 20rpx 0;
	overflow: hidden;
	position: relative;
	border-bottom: 2rpx dashed #eee;
}

.list .item:last-child {
	border-bottom: 0;
}

.list .item:first-child {
	padding-top: 0;
}

.list .item .left {
	width: 170rpx;
	height: 230rpx;
	border-radius: 14rpx;
	margin-right: 25rpx;
}

.list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.list .item .right .top {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.list .item .right .top .title {
	width: 100%;
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 20rpx;
	margin-top: 14rpx;
}

.list .item .right .top .desc {
	width: 100%;
	font-size: 26rpx;
	color: #999;
	margin-bottom: 10rpx;
}

.list .item .right .line {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-top: 24rpx;
}

.list .item .right .line .join {
	color: #fff;
	font-size: 28rpx;
	padding: 12rpx 30rpx;
	background-color: #ccc;
	border-radius: 30rpx;
}

.list .item .right .line .join.comm { 
	background-color: var(--projectColor); 
}

.list .item .right .line .users {
	flex: 1;
	display: flex;
	align-items: center;
}

.list .item .right .line .users .pic-group {
	display: flex;
	padding: 0 10rpx 0 0rpx;
	align-items: center;
}

.list .item .right .line .users .pic-group .pic {
	width: 48rpx !important;
	height: 48rpx !important;
}

.list .item .right .line .users .pic-group .pic {
	margin-left: -20rpx;
	border: 4rpx solid #fff;
	vertical-align: middle;
}

.list .item .right .line .users .pic-group .pic:first-child {
	margin-left: 0rpx;
}

.list .item .right .line .users .num {
	font-size: 24rpx;
	color: #bbb;
}

.tabs .tab-menu.cur { 
	color:#000!important; 
	font-size: 30rpx!important;
}
 

.tabs .tab-menu.cur:after {
	content: " ";
	position: absolute;
	left: 50%;
	bottom: 0rpx;
	width: 50%;
	height: 8rpx!important; 
	background-color: var(--projectColor) !important;
	transform: translateX(-50%);
	border-radius: 20rpx!important;
}
